<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AIMenuController">
    <children>
        <ImageView fitHeight="600.0" fitWidth="800.0">
            <image>
                <Image url="@img/electro.jpg" />
            </image>
        </ImageView>
        <Button fx:id="playWithAIButton" layoutX="200.0" layoutY="473.0" mnemonicParsing="false" onAction="#startGameWithAI" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #fff0b3; -fx-text-fill: #cca300; -fx-font-size: 20;" text="Graj z AI" />
        <ImageView fitHeight="225.0" fitWidth="500.0" layoutX="230.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@img/ScrabbleLogo.png" />
            </image>
        </ImageView>
      <AnchorPane fx:id="mainAnchorPane" layoutX="250.0" layoutY="188.0" prefHeight="275.0" prefWidth="300.0">
         <children>
            <Label fx:id="mainLabel" prefHeight="30.0" prefWidth="300.0" style="-fx-text-fill: #fff0b3; -fx-font-weight: bold; -fx-font-size: 20; -fx-alignment: center;" text="Wprowadź liczbę AI" />
            <ComboBox fx:id="numberOfAICombobox" layoutX="74.0" layoutY="27.0" prefWidth="150.0" />
         </children>
      </AnchorPane>
      <Button fx:id="returnButton" layoutX="431.0" layoutY="473.0" mnemonicParsing="false" onAction="#returnToMenuPage" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #fff0b3; -fx-text-fill: #cca300; -fx-font-size: 20;" text="Powrót" />
    </children></AnchorPane>
