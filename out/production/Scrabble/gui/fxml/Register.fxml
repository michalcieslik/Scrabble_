            <image>
                <Image url="@img/ScrabbleLogo.png" />
            </image>
        </ImageView>
      <Label layoutX="300.0" layoutY="372.0" prefHeight="30.0" prefWidth="200.0" style="-fx-text-fill: #fff0b3; -fx-font-weight: bold; -fx-font-size: 20; -fx-alignment: center;" text="Powtórz hasło" />
      <PasswordField fx:id="repeatPasswordField" layoutX="301.0" layoutY="402.0" prefHeight="25.0" prefWidth="199.0" />
