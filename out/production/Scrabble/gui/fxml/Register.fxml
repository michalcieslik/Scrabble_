        <Label layoutX="300.0" layoutY="300.0" prefHeight="30.0" prefWidth="200.0" style="-fx-text-fill: #fff0b3; -fx-font-weight: bold; -fx-font-size: 20; -fx-alignment: center;" text="Wybierz hasło" />
        <Label layoutX="300.0" layoutY="227.0" prefHeight="30.0" prefWidth="200.0" style="-fx-text-fill: #fff0b3; -fx-font-weight: bold; -fx-font-size: 20; -fx-alignment: center;" text="Wybierz login" />
