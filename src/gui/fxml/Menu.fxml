      <Button fx:id="logoutButton" layoutX="169.0" layoutY="517.0" mnemonicParsing="false" onAction="#logout" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #fff0b3; -fx-text-fill: #cca300; -fx-font-size: 20;" text="Wyloguj" />
